<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_list_item_margin_top"
        android:layout_marginBottom="@dimen/image_list_item_margin_bottom"
        android:layout_marginStart="@dimen/image_list_item_margin_start"
        android:layout_marginEnd="@dimen/image_list_item_margin_end">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/lytImageItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_list_item_margin">

        <ImageView
                android:id="@+id/imgRoverSmall"
                android:layout_width="96dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/txtRoverName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="@dimen/image_list_item_text_view_min_height"
                android:paddingStart="@dimen/image_list_item_left_padding"
                android:paddingEnd="@dimen/image_list_item_right_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_large"
                tools:text="RoverName"
                app:layout_constraintStart_toEndOf="@id/imgRoverSmall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/txtCameraName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="@dimen/image_list_item_text_view_min_height"
                android:paddingStart="@dimen/image_list_item_left_padding"
                android:paddingEnd="@dimen/image_list_item_right_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_large"
                tools:text="CameraName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgRoverSmall"
                app:layout_constraintTop_toBottomOf="@+id/txtRoverName"/>

        <TextView
                android:id="@+id/txtEarthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="@dimen/image_list_item_text_view_min_height"
                android:paddingStart="@dimen/image_list_item_left_padding"
                android:paddingEnd="@dimen/image_list_item_right_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_large"
                tools:text="EarthDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgRoverSmall"
                app:layout_constraintTop_toBottomOf="@+id/txtCameraName"/>

        <TextView
                android:id="@+id/txtMissionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="@dimen/image_list_item_text_view_min_height"
                android:paddingStart="@dimen/image_list_item_left_padding"
                android:paddingEnd="@dimen/image_list_item_right_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_large"
                tools:text="MartianSol"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgRoverSmall"
                app:layout_constraintTop_toBottomOf="@+id/txtEarthDate"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>